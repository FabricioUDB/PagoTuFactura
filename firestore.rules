/**
 * @fileoverview Firestore Security Rules for Invoice Hub application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for most data, while allowing a special 'accountant'
 * role to have read-only access to all user data for administrative purposes.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles.
 * - /users/{userId}/invoices/{invoiceId}: Stores invoices created by the user.
 * - /users/{userId}/invoices/{invoiceId}/items/{itemId}: Stores invoice items associated with a specific invoice.
 *
 * Roles & Custom Claims:
 * - accountant: Users with the custom claim `role: 'accountant'` have read-access to all user, invoice, and item data.
 *
 * Key Security Decisions:
 * - User data is private and only writable by the user themselves.
 * - Accountants can read any user's data but cannot write or modify it.
 * - Listing all users is now permitted for any authenticated user for development. This should be restricted to accountants in production.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAccountant() {
        return request.auth.token.role == 'accountant';
    }
    
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAccountant();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id; //Enforce immutability of user ID
      allow delete: if isOwner(userId);
    }
    
    // DEV-ONLY: Allow any signed-in user to list users. In production, this should be isAccountant().
    match /users/{userId} {
        allow list: if isSignedIn();
    }

    match /users/{userId}/invoices/{invoiceId} {
      allow get, list: if isOwner(userId) || isAccountant();
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isOwner(userId) && request.resource.data.userId == resource.data.userId; //Enforce immutability of userId
      allow delete: if isOwner(userId);
    }

    match /users/{userId}/invoices/{invoiceId}/items/{itemId} {
      allow get, list: if isOwner(userId) || isAccountant();
      allow create, update, delete: if isOwner(userId);
    }
  }
}
